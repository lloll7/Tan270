.recommend-container {
  display: flex;
  flex-direction: column;
  padding: 30rpx;
  height: 100%;
}
.recommend-container .search-container {
  display: flex;
  align-items: center;
  width: 100%;
  height: 100rpx;
  border-radius: 30rpx;
  background-color: #f8f8f8;
}
.recommend-container .search-container .img-container {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100rpx;
  height: 100%;
  margin-right: 20rpx;
}
.recommend-container .search-container .img-container image {
  width: 50rpx;
  height: 50rpx;
}
.recommend-container .classify-container {
  display: flex;
  align-items: center;
  width: 100%;
  height: 180rpx;
  margin-top: 40rpx;
}
.recommend-container .classify-container .classify-item {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  width: 100rpx;
  height: 140rpx;
  margin-right: 50rpx;
  font-size: 13px;
  color: #909090;
}
.recommend-container .classify-container .classify-item.active .img-container {
  background-color: #303030;
}
.recommend-container .classify-container .classify-item .img-container {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100rpx;
  height: 100rpx;
  background-color: #f5f5f5;
  border-radius: 20rpx;
}
.recommend-container .classify-container .classify-item .img-container image {
  width: 50rpx;
  height: 50rpx;
}
.recommend-container .goodsList {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  flex: 1;
}
.recommend-container .goodsList .goodItem {
  margin-bottom: 40rpx;
}
.recommend-container .bottomBox {
  width: 100%;
  height: 100rpx;
}
.box {
  display: flex;
}
.box view {
  width: 100rpx;
}