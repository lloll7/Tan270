.index-container {
  padding: 0 10rpx;
}
.scrollItemContainer {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 750rpx;
  border-radius: 25rpx;
  box-shadow: 1px 1px 20rpx rgba(0, 0, 0, 0.2);
  overflow: hidden;
}
.scrollItemContainer .image {
  width: 100%;
  height: 81%;
}
.scrollItemContainer .scrollItemInfo {
  display: flex;
  flex-direction: column;
  flex: 1;
  padding: 20rpx;
}
.scrollItemContainer .scrollItemInfo .title1 {
  font-weight: 800;
  margin-bottom: 10rpx;
  font-size: 15px;
}
.scrollItemContainer .scrollItemInfo .title2 {
  display: flex;
  justify-content: space-between;
  font-size: 12px;
  color: #bbbbbb;
}
.controlStrip {
  display: flex;
  flex-direction: column;
  width: 100%;
  margin-top: 50rpx;
}
.controlStrip .top,
.controlStrip .bottom {
  display: flex;
  justify-content: space-around;
  width: 100%;
}
.controlStrip .top .item,
.controlStrip .bottom .item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  width: 150rpx;
  height: 150rpx;
}
.controlStrip .top .item .img-container,
.controlStrip .bottom .item .img-container {
  width: 80rpx;
  height: 80rpx;
}
.controlStrip .top .item .img-container image,
.controlStrip .bottom .item .img-container image {
  width: 100%;
  height: 100%;
}
.controlStrip .top .item .text,
.controlStrip .bottom .item .text {
  width: 100%;
  text-align: center;
  font-size: 12px;
  color: #6f6f6f;
}
.styleList {
  width: 100%;
  white-space: nowrap;
  height: 350rpx;
  margin-top: 45rpx;
}
.styleList .styleBox {
  display: inline-block;
  width: 260rpx;
  height: 100%;
  margin-top: 10rpx;
  margin-right: 40rpx;
}
.styleList .styleBox .styleInnerBox {
  width: 100%;
  height: 90%;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0px 10px 5px rgba(0, 0, 0, 0.2);
}
.styleList .styleBox .styleInnerBox image {
  width: 100%;
  height: 100%;
}
.typeList {
  display: flex;
  flex-wrap: wrap;
  width: 100%;
  height: 400rpx;
  box-sizing: border-box;
  margin: 20rpx 0;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.1);
}
.typeList .typeItem {
  display: flex;
  width: 50%;
  height: 50%;
  background-color: white;
  outline: 2px solid rgba(0, 0, 0, 0.1);
}
.typeList .typeItem .wordContainer,
.typeList .typeItem .img-container {
  flex: 1;
}
.typeList .typeItem .wordContainer image,
.typeList .typeItem .img-container image {
  width: 100%;
  height: 100%;
}
.typeList .typeItem .wordContainer {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.typeList .typeItem .wordContainer .wordInnerContinaer {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.typeList .typeItem .wordContainer .wordInnerContinaer .CNWord {
  font-size: 18px;
  font-weight: bold;
}
.typeList .typeItem .wordContainer .wordInnerContinaer .ESWord {
  font-size: 12px;
  color: rgba(0, 0, 0, 0.4);
}
.tips-container {
  width: 100%;
  height: 430rpx;
  background-color: white;
  margin: 40rpx 0;
  padding: 20rpx 0;
}
.tips-container .top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 50rpx;
  box-sizing: border-box;
  width: 100%;
  height: 60rpx;
  line-height: 50rpx;
  font-size: 13px;
  font-weight: lighter;
  font-weight: 600;
}
.tips-container .top image {
  width: 30rpx;
  height: 30rpx;
}
.tips-container .swpier-container {
  width: 100%;
  height: 100%;
}
.tips-container .swpier-container .tips-swiper .swiper-item {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
}
.tips-container .swpier-container .tips-swiper .swiper-item image {
  width: 670rpx;
  height: 350rpx;
  object-fit: cover;
  border-radius: 40rpx;
  box-shadow: 0px 10px 20px rgba(0, 0, 0, 0.2);
}
.tip {
  display: flex;
  justify-content: space-between;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  margin: 40rpx 0 10rpx 0;
  padding: 0 20rpx;
  box-sizing: border-box;
  font-size: 15px;
}
.tip .content1,
.tip .content2 {
  font-weight: bold;
}
.tip .content2 {
  display: flex;
  justify-content: center;
  align-items: center;
}
.tip .content2 image {
  width: 50rpx;
  height: 50rpx;
}
.goodsList {
  width: 100%;
  height: 100%;
  display: flex;
  flex-wrap: wrap;
  flex: 1;
}
.goodsList .goodItem {
  margin: 0 20rpx;
  margin-bottom: 40rpx;
  box-shadow: 1px 1px 10px rgba(0, 0, 0, 0.1);
}
.bottom {
  width: 100%;
  height: 100rpx;
}