.outer-container {
  background-color: #f5f5f5;
}
.outer-container .topNav {
  display: flex;
  width: 100%;
  height: 60rpx;
  background-color: white;
  margin-bottom: 7rpx;
  box-shadow: 0px 7px 7px -7px rgba(0, 0, 0, 0.2);
}
.outer-container .topNav .hotShop,
.outer-container .topNav .newShop {
  flex: 1;
  text-align: center;
  line-height: 60rpx;
}
.outer-container .topNav .hotShop.active,
.outer-container .topNav .newShop.active {
  border-bottom: 3px solid #c3c3c3;
}
.outer-container .shopList-container {
  box-sizing: border-box;
  padding: 15rpx 20rpx;
  background-color: #f5f5f5;
  height: 100%;
}
.outer-container .bottom {
  width: 100%;
  height: 100rpx;
