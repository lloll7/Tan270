.buySchemePage-container {
  position: relative;
}
.buySchemePage-container .bgImg {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  bottom: 0;
  z-index: -1;
}
.buySchemePage-container .bgImg image {
  width: 100%;
  height: 100%;
}
.buySchemePage-container .allSelected {
  display: flex;
  align-items: center;
  justify-content: space-around;
  width: 130rpx;
  height: 80rpx;
  font-weight: bold;
  color: white;
}
.buySchemePage-container .allSelected .btn {
  width: 100rpx;
  height: 40rpx;
  border-radius: 50rpx;
  border: 2px solid rgba(0, 0, 0, 0.3);
  font-size: 23rpx;
  text-align: center;
  line-height: 40rpx;
  color: rgba(0, 0, 0, 0.5);
}
.buySchemePage-container .allSelected .btn.selected {
  color: white;
  border: 2px solid #bfa;
  background-color: #9bff8c;
  box-shadow: inset 0px 0px 10px rgba(0, 0, 0, 0.3);
}
.buySchemePage-container .buyScheme-container {
  display: grid;
  grid-template-columns: 1fr 1fr;
  grid-row-gap: 50rpx;
  align-items: center;
  justify-items: center;
  width: 100vw;
  height: auto;
}