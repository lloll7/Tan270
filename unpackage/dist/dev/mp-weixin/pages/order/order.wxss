.bottom {
  width: 100%;
  height: 100rpx;
}
.order-container {
  position: relative;
  margin-bottom: 150rpx;
}
.order-container .shoppingCartContainer {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.order-container .shoppingCartContainer .radioContainer {
  display: flex;
  width: 100%;
  justify-content: flex-start;
  padding-left: 15rpx;
  margin: 30rpx 0;
}
.order-container .shoppingCartContainer .shoppingCartList {
  width: 90%;
}
.order-container .shoppingCartContainer .shoppingCartList .bottom {
  width: 100%;
  height: 300rpx;
}
.order-container .shoppingCartContainer .shoppingCartList .shoppingCartItem-container {
  margin: 30rpx 0;
}
.order-container .computeBox-container {
  position: fixed;
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 300rpx;
  bottom: 50rpx;
  left: 50%;
  transform: translate(-50%);
  border-radius: 20rpx;
  box-shadow: 1px 1px 10px rgba(0, 0, 0, 0.1);
  background-color: white;
  padding-bottom: 100rpx;
  box-sizing: border-box;
}
.order-container .computeBox-container .content {
  display: flex;
  flex: 1;
  flex-direction: column;
  justify-content: space-around;
  font-size: 15px;
  padding: 15rpx 15rpx 0 15rpx;
}
.order-container .computeBox-container .content .text1,
.order-container .computeBox-container .content .text2 {
  display: flex;
  justify-content: space-between;
  padding: 0 40rpx;
  font-weight: bold;
}
.order-container .computeBox-container .content .text1 .price {
  color: red;
}
.order-container .computeBox-container .settleBtn-container {
  display: flex;
  justify-content: center;
  align-items: center;
  flex: 1;
}
.order-container .computeBox-container .settleBtn-container .settleBtn {
  width: 500rpx;
  height: 70rpx;
  text-align: center;
  line-height: 70rpx;
  border-radius: 50rpx;
  background-color: #ffd321;
  font-weight: bold;
}