.userPage-container {
  display: flex;
  flex-direction: column;
  background-color: #f5f5f5;
  box-sizing: border-box;
  height: 100vh;
}
.userPage-container .my-header {
  position: relative;
  padding-bottom: 30rpx;
}
.userPage-container .my-header .my-header-background {
  position: absolute;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  opacity: 0.3;
  filter: blur(16rpx);
}
.userPage-container .my-header .my-header-background image {
  width: 100%;
  height: 100%;
}
.userPage-container .my-header .my-header-logo {
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-wrap: nowrap;
  flex-direction: column;
  align-items: center;
  padding-top: 60rpx;
  position: relative;
  z-index: 10;
}
.userPage-container .my-header .my-header-logo .my-header-logo-box {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  overflow: hidden;
}
.userPage-container .my-header .my-header-logo .my-header-logo-box image {
  width: 100%;
  height: 100%;
}
.userPage-container .my-header .my-header-logo .user-name {
  margin-top: 30rpx;
  font-size: 32rpx;
  font-weight: bold;
}
.userPage-container .my-header .my-header-info {
  margin-top: 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-wrap: row;
  flex-direction: nowrap;
}
.userPage-container .my-header .my-header-info .my-header-info-box {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-wrap: nowrap;
  flex-direction: column;
  font-size: 24rpx;
  color: #999;
}
.userPage-container .my-header .my-header-info .my-header-info-box .my-header-info-title {
  font-size: 28rpx;
  color: #333;
}
.userPage-container .top {
  width: 100%;
  height: 150rpx;
}
.userPage-container .top .userInfo {
  padding-left: 40rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  width: 100%;
  height: 100%;
}
.userPage-container .top .userInfo image {
  width: 100rpx;
  height: 100rpx;
  object-fit: cover;
  margin-right: 40rpx;
  border-radius: 50%;
}
.userPage-container .top .userInfo .userName {
  height: 80rpx;
  line-height: 80rpx;
  font-size: 15px;
  font-weight: bold;
}
.userPage-container .bannerContainer {
  width: 100%;
  height: 330rpx;
  overflow: hidden;
}
.userPage-container .bannerContainer image {
  width: 100%;
}
.userPage-container .myOrder-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: 95%;
  height: 200rpx;
  margin: 20px auto 20rpx auto;
  background-color: rgba(255, 255, 255, 0.8);
  border-radius: 20rpx;
  box-shadow: 1px 1px 10px rgba(0, 0, 0, 0.1);
}
.userPage-container .myOrder-container .myOrderWord {
  width: 100%;
  text-align: center;
  font-size: 15px;
  margin-bottom: 20rpx;
}
.userPage-container .myOrder-container .contentList {
  display: flex;
}
.userPage-container .myOrder-container .contentList .item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 150rpx;
  height: 100%;
  font-size: 15px;
  font-size: 13px;
}
.userPage-container .myOrder-container .contentList .item .img-container {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 3px;
}
.userPage-container .myOrder-container .contentList .item .img-container image {
  width: 100%;
  height: 100%;
}
.userPage-container .funList1 {
  display: flex;
  justify-content: space-around;
  align-items: center;
  width: 99%;
  height: 140rpx;
  background-color: white;
}
.userPage-container .funList1 .item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 150rpx;
  height: 100%;
  font-size: 15px;
  font-size: 13px;
}
.userPage-container .funList1 .item image {
  width: 50rpx;
  height: 50rpx;
  margin-bottom: 8px;
}
.userPage-container .funList2 {
  width: 100%;
  font-size: 13px;
}
.userPage-container .funList2 .item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  height: 140rpx;
  padding: 0 40rpx;
  box-sizing: border-box;
  background-color: white;
  margin-top: 5rpx;
}
.userPage-container .funList2 .item .img-text-container {
  display: flex;
  align-items: center;
}
.userPage-container .funList2 .item .img-text-container image {
  margin-right: 50rpx;
}
.userPage-container .funList2 .item image {
  width: 50rpx;
  height: 50rpx;
}
.userPage-container .funList2 .bottomBox {
  width: 100%;
  height: 100%;
  background-color: white;
}