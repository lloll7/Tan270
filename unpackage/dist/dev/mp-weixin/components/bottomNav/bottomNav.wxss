.bottomNav-container {
  display: flex;
  position: fixed;
  left: 0;
  bottom: 0;
  justify-content: space-around;
  align-items: center;
  width: 100%;
  height: 100rpx;
  background-color: white;
  box-shadow: 1px 1px 10px rgba(0, 0, 0, 0.2);
  z-index: 999;
}
.bottomNav-container .bottomNav-item {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  width: 100rpx;
  height: 100%;
  font-size: 12px;
}
.bottomNav-container .bottomNav-item .imgContainer {
  width: 50rpx;
  height: 50rpx;
}
.bottomNav-container .bottomNav-item .imgContainer image {
  width: 100%;
  height: 100%;
}
.bottomNav-container .bottomNav-item.middleItem {
  width: 120rpx;
  height: 120%;
  position: relative;
  top: -30rpx;
  background-color: white;
  border-radius: 50%;
  box-shadow: 1px 0px 10px rgba(0, 0, 0, 0.2);
}
.bottomNav-container .bottomNav-item.middleItem .imgContainer {
  width: 80rpx;
  height: 80rpx;
}
.bottomNav-container .bottomNav-item.middleItem .imgContainer image {
  width: 100%;
  height: 100%;
}