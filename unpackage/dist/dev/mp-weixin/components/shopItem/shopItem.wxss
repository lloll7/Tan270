.shopItem-container {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 350rpx;
  border-radius: 10rpx;
  background-color: white;
  box-shadow: -1px -1px 5px rgba(0, 0, 0, 0.1);
  margin-bottom: 30rpx;
  border: 2px solid #333333;
  box-sizing: border-box;
}
.shopItem-container .top {
  position: relative;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  padding: 0 20rpx;
  font-size: 13px;
  height: 40%;
}
.shopItem-container .top .bg {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background-size: contain;
  background-repeat: no-repeat;
  opacity: 0.5;
}
.shopItem-container .top .shopInfo-container {
  display: flex;
  z-index: 2;
}
.shopItem-container .top .shopInfo-container .img-container {
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
}
.shopItem-container .top .shopInfo-container .img-container image {
  width: 100%;
  height: 100%;
}
.shopItem-container .top .shopInfo-container .shopInfo {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
  font-size: 16px;
  border-top: 2px solid #333333;
  box-sizing: border-box;
}
.shopItem-container .top .shopInfo-container .shopInfo .shopMessage {
  display: flex;
  font-size: 13px;
  margin-top: 10rpx;
}
.shopItem-container .top .shopInfo-container .shopInfo .shopMessage view {
  margin-right: 15rpx;
}
.shopItem-container .top .btn-container {
  width: 120rpx;
  height: 40rpx;
  z-index: 999;
  --bRadius: 10px;
}
.shopItem-container .top .btn-container .inToShop {
  position: relative;
  transition: all 0.3s;
  width: 100%;
  height: 100%;
  text-align: center;
  line-height: 40rpx;
  border: 1px solid #717171;
  color: #717171;
}
.shopItem-container .top .btn-container .inToShop::before, .shopItem-container .top .btn-container .inToShop::after {
  content: "";
  position: absolute;
  top: -10rpx;
  left: -10rpx;
  right: -10rpx;
  bottom: -10rpx;
  border: 1px solid #333333;
  transition: all 0.3s;
  animation: clippath 3s infinite linear;
}
.shopItem-container .top .btn-container .inToShop::after {
  animation: clippath 3s infinite -1.5s linear;
}
@keyframes clippath {
0%, 100% {
    -webkit-clip-path: inset(0 0 98% 0);
            clip-path: inset(0 0 98% 0);
}
25% {
    -webkit-clip-path: inset(0 98% 0 0);
            clip-path: inset(0 98% 0 0);
}
50% {
    -webkit-clip-path: inset(98% 0 0 0);
            clip-path: inset(98% 0 0 0);
}
75% {
    -webkit-clip-path: inset(0 0 0 98%);
            clip-path: inset(0 0 0 98%);
}
}
.shopItem-container .shopsItemList {
  display: flex;
  justify-content: space-around;
  align-items: center;
  flex: 1;
  box-sizing: border-box;
  padding: 15rpx 0;
}
.shopItem-container .shopsItemList .item {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  width: 150rpx;
  height: 100%;
  color: hotpink;
}
.shopItem-container .shopsItemList .item .img-container {
  width: 150rpx;
  height: 170rpx;
  border-radius: 10rpx;
  overflow: hidden;
}
.shopItem-container .shopsItemList .item .img-container image {
  width: 100%;
  height: 100%;
}
.shopItem-container .shopsItemList .item .price {
  font-size: 11px;
  margin-top: 10rpx;
}