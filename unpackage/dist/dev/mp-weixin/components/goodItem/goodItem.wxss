.goodItem-container {
  display: flex;
  flex-direction: column;
  width: 325rpx;
  height: 400rpx;
  box-shadow: 10px 10px 20px rgba(0, 0, 0, 0.06);
  background-color: white;
  border-radius: 20rpx;
  overflow: hidden;
}
.goodItem-container .img-container {
  width: 100%;
  height: 240rpx;
  object-fit: cover;
  margin-bottom: 10rpx;
}
.goodItem-container .img-container image {
  width: 100%;
  height: 100%;
}
.goodItem-container .goodInfo {
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: 100%;
  height: 150rpx;
  box-sizing: border-box;
  padding: 10rpx 20rpx;
  border-top: 1px solid rgba(0, 0, 0, 0.1);
}
.goodItem-container .goodInfo .goodName {
  font-size: 15px;
  font-weight: bold;
  margin-bottom: 10rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  word-break: break-all;
  white-space: nowrap;
}
.goodItem-container .goodInfo .bottom {
  display: flex;
  justify-content: space-between;
  width: 100%;
  height: 50rpx;
}
.goodItem-container .goodInfo .bottom .price {
  color: #b2b7a7;
}
.goodItem-container .goodInfo .bottom .intoGoodDetail {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 40rpx;
  height: 40rpx;
  box-shadow: 1px 1px 5px rgba(0, 0, 0, 0.2);
  background-color: white;
}
.goodItem-container .goodInfo .bottom .intoGoodDetail image {
  width: 30rpx;
  height: 30rpx;
}