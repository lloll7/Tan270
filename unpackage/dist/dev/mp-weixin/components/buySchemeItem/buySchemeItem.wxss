.buySchemeItem-contianer {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  width: 300rpx;
  height: 400rpx;
  background-color: white;
  border-radius: 20rpx;
  box-sizing: border-box;
}
.buySchemeItem-contianer .img-container {
  width: 200rpx;
  height: 200rpx;
}
.buySchemeItem-contianer .img-container image {
  width: 100%;
  height: 100%;
}
.buySchemeItem-contianer .text {
  font-size: 20px;
  font-weight: bold;
}
.buySchemeItem-contianer .btn {
  width: 200rpx;
  border: 2px solid #515151;
  text-align: center;
  border-radius: 30rpx;
  height: 50rpx;
  line-height: 50rpx;
  color: #515151;
}
.buySchemeItem-contianer.selected {
  box-shadow: inset 8px 8px 10px rgba(0, 0, 0, 0.5);
  border: 2px solid #59b05f;
}
.buySchemeItem-contianer.selected .btn {
  color: #59b05f;
  border: 2px solid #59b05f;
}