.scroll-view_H {
  display: flex;
  white-space: nowrap;
  align-items: flex-start;
}
.shoppingCartItem-container {
  display: inline-block;
  width: 100%;
  height: 200rpx;
  border: 1px solid rgba(0, 0, 0, 0.2);
  box-shadow: 5px 5px 5px rgba(0, 0, 0, 0.05);
}
.shoppingCartItem-container .itemContainer {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding: 0 20rpx;
}
.shoppingCartItem-container .itemContainer .goodInfo {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  flex: 1;
}
.shoppingCartItem-container .itemContainer .goodInfo .info {
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex: 1;
  box-sizing: border-box;
  padding-right: 30rpx;
}
.shoppingCartItem-container .itemContainer .goodInfo .info .itemInfo {
  display: flex;
  height: 200rpx;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 50rpx 0;
}
.shoppingCartItem-container .itemContainer .goodInfo .info .itemInfo .title {
  font-size: 16px;
  font-weight: bold;
}
.shoppingCartItem-container .itemContainer .goodInfo .info .itemInfo .price {
  font-size: 13px;
  color: red;
}
.shoppingCartItem-container .itemContainer .goodInfo .info .sellNum {
  display: flex;
  align-items: center;
}
.shoppingCartItem-container .itemContainer .goodInfo .info .sellNum .decreaseBtn,
.shoppingCartItem-container .itemContainer .goodInfo .info .sellNum .increaseBtn {
  width: 35rpx;
  height: 35rpx;
  border-radius: 50%;
  background-color: rgba(0, 0, 0, 0.1);
  text-align: center;
  line-height: 35rpx;
  margin: 0 20rpx;
  color: rgba(0, 0, 0, 0.4);
}
.shoppingCartItem-container .itemContainer .goodInfo .imgContainer {
  width: 200rpx;
  height: 200rpx;
}
.shoppingCartItem-container .itemContainer .goodInfo .imgContainer image {
  width: 100%;
  height: 100%;
}
.shoppingCartItem-container .itemContainer .goodInfo .sellNum {
  display: flex;
}
.delItem {
  display: inline-block;
  width: 100rpx;
  height: 204rpx;
  vertical-align: top;
  margin-top: 30rpx;
  background-color: #fc011a;
}
.delItem .delBtnOuter-container {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.delItem .delBtnOuter-container .delBtn-container {
  height: 70rpx;
}
.delItem .delBtnOuter-container .delBtn-container .delBtn {
  color: white;
  font-size: 13px;
}
.delItem .delBtnOuter-container .delBtn-container .img-container {
  width: 40rpx;
  height: 40rpx;
}
.delItem .delBtnOuter-container .delBtn-container .img-container image {
  width: 100%;
  height: 100%;
}